<Page x:Class="Overshadow.Help"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Overshadow"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      Title="Help">

    <Grid>
        <Grid Margin="0,0,0,0"
              Background="#1C2F3E">
            <Image Source="Assets/demon.png"
                   Height="200" Opacity="0.5"/>
        </Grid>
        <TextBlock 
            TextWrapping="Wrap"
            Margin="20"
            Foreground="White"
            FontSize="26">
            Help has arrived <LineBreak/> <LineBreak/>
            - The Compile page will compile ScatterBrain for you! <LineBreak/> <LineBreak/>
            - The Encryption page will encrypt all the things and take new keys! <LineBreak/> <LineBreak/>
            - The Main page will display all relevant information about the payload. <LineBreak/> <LineBreak/>
            - The Settings page configures which safety checks and execution methods are in place. <LineBreak/> <LineBreak/>
        </TextBlock>
    </Grid>
</Page>
